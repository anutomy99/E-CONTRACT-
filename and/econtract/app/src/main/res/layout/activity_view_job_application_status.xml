    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView38"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Job" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:gravity="center"
